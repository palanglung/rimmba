    padding: 20px;
  }

  .ai-page-tiles-padding-m-{{ ai_gen_id }} {
    padding: 30px;
  }

  .ai-page-tiles-padding-l-{{ ai_gen_id }} {
    padding: 40px;
  }

  .ai-page-tiles-padding-xl-{{ ai_gen_id }} {
    padding: 50px;
  }

  .ai-page-tile-title-{{ ai_gen_id }} {
    margin: 0 0 10px 0;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-page-tiles-title-s-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
    font-size: 18px;
  }

  .ai-page-tiles-title-m-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
    font-size: 24px;
  }

  .ai-page-tiles-title-l-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
    font-size: 32px;
  }

  .ai-page-tiles-title-xl-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
    font-size: 42px;
  }

  .ai-page-tile-description-{{ ai_gen_id }} {
    margin: 0 0 15px 0;
    line-height: 1.5;
  }

  .ai-page-tiles-description-s-{{ ai_gen_id }} .ai-page-tile-description-{{ ai_gen_id }} {
    font-size: 14px;
  }

  .ai-page-tiles-description-m-{{ ai_gen_id }} .ai-page-tile-description-{{ ai_gen_id }} {
    font-size: 16px;
  }

  .ai-page-tiles-description-l-{{ ai_gen_id }} .ai-page-tile-description-{{ ai_gen_id }} {
    font-size: 18px;
  }

  .ai-page-tiles-description-xl-{{ ai_gen_id }} .ai-page-tile-description-{{ ai_gen_id }} {
    font-size: 20px;
  }

  .ai-page-tile-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
    font-weight: 500;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .ai-page-tile-button-filled-{{ ai_gen_id }} {
    background-color: currentColor;
  }

  .ai-page-tile-button-outline-{{ ai_gen_id }} {
    background-color: transparent;
    border-color: currentColor;
  }

