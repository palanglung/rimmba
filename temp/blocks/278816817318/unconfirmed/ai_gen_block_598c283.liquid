    }

    .ai-page-tiles-title-xl-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
      font-size: 32px;
    }
  }
{% endstyle %}

<page-tiles-{{ ai_gen_id }} class="ai-page-tiles-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-page-tiles-container-{{ ai_gen_id }} {{ section_width_class }} {{ spacing_top_class }} {{ spacing_bottom_class }} {{ title_size_class }} {{ description_size_class }} {{ padding_size_class }}" style="background: {{ block.settings.section_color_scheme.settings.background }}; color: {{ block.settings.section_color_scheme.settings.primary_text }};">
    <div class="ai-page-tiles-grid-{{ ai_gen_id }}">
      {% for i in (1..block.settings.number_of_tiles) %}
        {% liquid
          assign tile_page_key = 'tile_' | append: i | append: '_page'
          assign tile_url_key = 'tile_' | append: i | append: '_url'
          assign tile_title_key = 'tile_' | append: i | append: '_title'
          assign tile_description_key = 'tile_' | append: i | append: '_description'
          assign tile_image_key = 'tile_' | append: i | append: '_image'
          assign tile_color_scheme_key = 'tile_' | append: i | append: '_color_scheme'
          assign tile_content_align_key = 'tile_' | append: i | append: '_content_align'
          assign tile_overlay_key = 'tile_' | append: i | append: '_overlay'
          assign tile_button_text_key = 'tile_' | append: i | append: '_button_text'
          assign tile_button_style_key = 'tile_' | append: i | append: '_button_style'
          assign tile_button_align_key = 'tile_' | append: i | append: '_button_align'

          assign tile_page = block.settings[tile_page_key]
          assign tile_url = block.settings[tile_url_key]
          assign tile_title = block.settings[tile_title_key]
          assign tile_description = block.settings[tile_description_key]
          assign tile_image = block.settings[tile_image_key]
          assign tile_color_scheme = block.settings[tile_color_scheme_key]
          assign tile_content_align = block.settings[tile_content_align_key]
          assign tile_overlay = block.settings[tile_overlay_key]
          assign tile_button_text = block.settings[tile_button_text_key]
          assign tile_button_style = block.settings[tile_button_style_key]
          assign tile_button_align = block.settings[tile_button_align_key]

          if tile_url == blank and tile_page
            assign tile_url = tile_page.url
          endif

          if tile_title == blank and tile_page
            assign tile_title = tile_page.title
          endif

          if tile_description == blank and tile_page and tile_page.metafields.global.description_tag
            assign tile_description = tile_page.metafields.global.description_tag
          endif

          if tile_image == blank and tile_page and tile_page.image
            assign tile_image = tile_page.image
          endif

          assign overlay_class = ''
          if tile_overlay == 'light'
            assign overlay_class = 'ai-page-tile-overlay-light-' | append: ai_gen_id
          elsif tile_overlay == 'medium'
            assign overlay_class = 'ai-page-tile-overlay-medium-' | append: ai_gen_id
          elsif tile_overlay == 'dark'
            assign overlay_class = 'ai-page-tile-overlay-dark-' | append: ai_gen_id
          endif

          assign content_align_class = 'ai-page-tile-content-' | append: tile_content_align | append: '-' | append: ai_gen_id
          assign button_style_class = 'ai-page-tile-button-' | append: tile_button_style | append: '-' | append: ai_gen_id
          assign button_align_class = 'ai-page-tile-button-align-' | append: tile_button_align | append: '-' | append: ai_gen_id
        %}

        <a href="{{ tile_url }}" class="ai-page-tile-{{ ai_gen_id }}" style="background: {{ tile_color_scheme.settings.background }}; color: {{ tile_color_scheme.settings.primary_text }};">
          {% if tile_image %}
            <img
              src="{{ tile_image | image_url: width: 1200 }}"
              alt="{{ tile_image.alt | escape }}"
              loading="lazy"
              class="ai-page-tile-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-page-tile-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if tile_overlay != 'none' %}
            <div class="ai-page-tile-overlay-{{ ai_gen_id }} {{ overlay_class }}"></div>
          {% endif %}

          <div class="ai-page-tile-content-{{ ai_gen_id }} {{ content_align_class }}">
            {% if tile_content_align == 'distributed' %}
              <div>
                {% if tile_title != blank %}
                  <h3 class="ai-page-tile-title-{{ ai_gen_id }}">{{ tile_title }}</h3>
                {% endif %}
              </div>
              <div>
                {% if tile_description != blank %}
                  <p class="ai-page-tile-description-{{ ai_gen_id }}">{{ tile_description }}</p>
                {% endif %}
              </div>
              <div>
                {% if tile_button_text != blank %}
                  <span class="ai-page-tile-button-{{ ai_gen_id }} {{ button_style_class }} {{ button_align_class }}" style="color: {{ tile_color_scheme.settings.primary_button_label }}; background-color: {{ tile_color_scheme.settings.primary_button }}; border-color: {{ tile_color_scheme.settings.primary_button }};">
                    {{ tile_button_text }}
                  </span>
                {% endif %}
              </div>
            {% else %}
              {% if tile_title != blank %}
                <h3 class="ai-page-tile-title-{{ ai_gen_id }}">{{ tile_title }}</h3>
              {% endif %}
              {% if tile_description != blank %}
                <p class="ai-page-tile-description-{{ ai_gen_id }}">{{ tile_description }}</p>
              {% endif %}
              {% if tile_button_text != blank %}
                <span class="ai-page-tile-button-{{ ai_gen_id }} {{ button_style_class }} {{ button_align_class }}" style="color: {{ tile_color_scheme.settings.primary_button_label }}; background-color: {{ tile_color_scheme.settings.primary_button }}; border-color: {{ tile_color_scheme.settings.primary_button }};">
                  {{ tile_button_text }}
                </span>
              {% endif %}
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</page-tiles-{{ ai_gen_id }}>

<script>
  (function() {
    class PageTiles{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustTileHeights();
        window.addEventListener('resize', () => this.adjustTileHeights());
      }

      adjustTileHeights() {
        const tiles = this.querySelectorAll('.ai-page-tile-{{ ai_gen_id }}');
        if (window.innerWidth > 768) {
          tiles.forEach(tile => {
            tile.style.minHeight = '300px';
          });
        } else {
          tiles.forEach(tile => {
            tile.style.minHeight = '250px';
          });
        }
      }
    }

    customElements.define('page-tiles-{{ ai_gen_id }}', PageTiles{{ ai_gen_id }});
  })();
</script>

