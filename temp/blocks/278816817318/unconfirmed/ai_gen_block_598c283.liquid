    .ai-page-tiles-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }

    {% if block.settings.masonry %}
      .ai-page-tiles-grid-{{ ai_gen_id }} .ai-page-tile-{{ ai_gen_id }}:first-child {
        grid-column: 1;
        grid-row: auto;
      }
    {% endif %}

    .ai-page-tiles-container--narrow-{{ ai_gen_id }},
    .ai-page-tiles-container--fluid-{{ ai_gen_id }} {
      padding: 0 20px;
    }

    .ai-page-tiles-title-s-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
      font-size: 16px;
    }

    .ai-page-tiles-title-m-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
      font-size: 20px;
    }

    .ai-page-tiles-title-l-{{ ai_gen_id }} .ai-page-tile-title-{{ ai_gen_id }} {
