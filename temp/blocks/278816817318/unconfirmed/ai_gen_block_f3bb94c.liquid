{% doc %}
  @prompt
    a multi-tile section with choice for width (narrow, fluid, full), style and 4 different layouts options.
    Each of the blocks contained should contain:
    - Title
    - Description
    - Be itself a link
    - Background image (option to leave empty, manually choose, or link to page as explained below)
    The contents can be manually inserted or automatically links to:
    - page title
    - page Meta Description
    - page URL
    - page featured image
    of different selected pages., The option to choose "manual" and "linked to page" should be available for each: Title, Description, Background Image. The Option for Color Scheme option should be available for each tile. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multi-tile-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-multi-tile-container-{{ ai_gen_id }} {
    margin: 0 auto;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}.width-narrow {
    max-width: 800px;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}.width-fluid {
    max-width: 1200px;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}.width-full {
    max-width: 100%;
  }

  .ai-multi-tile-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.tile_spacing }}px;
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-2x2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-3x1 {
    grid-template-columns: repeat(3, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-4x1 {
    grid-template-columns: repeat(4, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry {
    grid-template-columns: repeat(3, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry .ai-multi-tile-item-{{ ai_gen_id }}:nth-child(1) {
    grid-row: span 2;
  }

  .ai-multi-tile-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.tile_border_radius }}px;
    min-height: {{ block.settings.tile_min_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .ai-multi-tile-item-{{ ai_gen_id }}:hover {
    transform: scale(1.02);
  }

  .ai-multi-tile-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-multi-tile-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-multi-tile-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-multi-tile-background-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-none {
    background: transparent;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-light {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 100%);
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-medium {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-dark {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
  }

  .ai-multi-tile-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: {{ block.settings.content_padding }}px;
  }

  .ai-multi-tile-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 8px;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-multi-tile-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-2x2,
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-3x1,
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-4x1,
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry {
      grid-template-columns: 1fr;
    }

    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry .ai-multi-tile-item-{{ ai_gen_id }}:nth-child(1) {
      grid-row: span 1;
    }

    .ai-multi-tile-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-multi-tile-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

<multi-tile-section-{{ ai_gen_id }} class="ai-multi-tile-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-tile-container-{{ ai_gen_id }} width-{{ block.settings.container_width }}">
    <div class="ai-multi-tile-grid-{{ ai_gen_id }} layout-{{ block.settings.layout }}">
      {% for i in (1..4) %}
        {% liquid
          assign content_source_key = 'content_source_' | append: i
          assign title_source_key = 'title_source_' | append: i
          assign description_source_key = 'description_source_' | append: i
          assign image_source_key = 'image_source_' | append: i
          assign manual_title_key = 'manual_title_' | append: i
          assign manual_description_key = 'manual_description_' | append: i
          assign manual_url_key = 'manual_url_' | append: i
          assign manual_image_key = 'manual_image_' | append: i
          assign linked_page_key = 'linked_page_' | append: i
          assign color_scheme_key = 'color_scheme_' | append: i
          assign overlay_style_key = 'overlay_style_' | append: i

          assign linked_page = block.settings[linked_page_key]

          if block.settings[title_source_key] == 'manual'
            assign tile_title = block.settings[manual_title_key]
          else
            if linked_page
              assign tile_title = linked_page.title
            else
              assign tile_title = ''
            endif
          endif

          if block.settings[description_source_key] == 'manual'
            assign tile_description = block.settings[manual_description_key]
          else
            if linked_page
              assign tile_description = linked_page.metafields.global.description_tag
            else
              assign tile_description = ''
            endif
          endif

          if block.settings[image_source_key] == 'manual'
            assign tile_image = block.settings[manual_image_key]
          else
            if linked_page
              assign tile_image = linked_page.image
            else
              assign tile_image = null
            endif
          endif

          if block.settings[content_source_key] == 'manual'
            assign tile_url = block.settings[manual_url_key]
          else
            if linked_page
              assign tile_url = linked_page.url
            else
              assign tile_url = ''
            endif
          endif

          assign color_scheme = block.settings[color_scheme_key]
          assign overlay_style = block.settings[overlay_style_key]
        %}

        <a
          href="{{ tile_url }}"
          class="ai-multi-tile-item-{{ ai_gen_id }} color-{{ color_scheme }}"
          {% if tile_url == blank %}aria-disabled="true" style="pointer-events: none;"{% endif %}
        >
          <div class="ai-multi-tile-background-{{ ai_gen_id }}">
            {% if tile_image %}
              <img
                src="{{ tile_image | image_url: width: 800 }}"
                alt="{{ tile_image.alt | escape }}"
                loading="lazy"
                width="800"
                height="600"
              >
            {% else %}
              <div class="ai-multi-tile-background-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-multi-tile-overlay-{{ ai_gen_id }} overlay-{{ overlay_style }}"></div>
          <div class="ai-multi-tile-content-{{ ai_gen_id }}">
            {% if tile_title != blank %}
              <h3 class="ai-multi-tile-title-{{ ai_gen_id }}">{{ tile_title }}</h3>
            {% endif %}
            {% if tile_description != blank %}
              <p class="ai-multi-tile-description-{{ ai_gen_id }}">{{ tile_description }}</p>
            {% endif %}
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</multi-tile-section-{{ ai_gen_id }}>

<script>
  (function() {
    class MultiTileSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const tiles = this.querySelectorAll('.ai-multi-tile-item-{{ ai_gen_id }}');
        tiles.forEach((tile) => {
          if (!tile.getAttribute('href') || tile.getAttribute('href') === '') {
            tile.setAttribute('tabindex', '-1');
          }
        });
      }
    }

    customElements.define('multi-tile-section-{{ ai_gen_id }}', MultiTileSection{{ ai_gen_id }});
  })();
</script>

