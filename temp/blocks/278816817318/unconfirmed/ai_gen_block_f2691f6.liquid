<script>
  (function() {
    class MultiTileSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const tiles = this.querySelectorAll('.ai-multi-tile-item-{{ ai_gen_id }}');
        tiles.forEach((tile) => {
          if (!tile.getAttribute('href') || tile.getAttribute('href') === '') {
            tile.setAttribute('tabindex', '-1');
          }
        });
      }
    }

    customElements.define('multi-tile-section-{{ ai_gen_id }}', MultiTileSection{{ ai_gen_id }});
  })();
</script>

