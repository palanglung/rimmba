{% doc %}
  @prompt
    a multi-tile section with choice for width (narrow, fluid, full), style and 4 different layouts options.
    Each of the blocks contained should contain:
    - Title
    - Description
    - Be itself a link
    - Background image (option to leave empty, manually choose, or link to page as explained below)
    The contents can be manually inserted or automatically links to:
    - page title
    - page Meta Description
    - page URL
    - page featured image
    of different selected pages.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-multi-tile-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-multi-tile-container-{{ ai_gen_id }} {
    margin: 0 auto;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}.width-narrow {
    max-width: 800px;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}.width-fluid {
    max-width: 1200px;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}.width-full {
    max-width: 100%;
  }

  .ai-multi-tile-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.tile_spacing }}px;
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-2x2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-3x1 {
    grid-template-columns: repeat(3, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-4x1 {
    grid-template-columns: repeat(4, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry {
    grid-template-columns: repeat(3, 1fr);
  }

  .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry .ai-multi-tile-item-{{ ai_gen_id }}:nth-child(1) {
    grid-row: span 2;
  }

  .ai-multi-tile-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.tile_border_radius }}px;
    min-height: {{ block.settings.tile_min_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .ai-multi-tile-item-{{ ai_gen_id }}:hover {
    transform: scale(1.02);
  }

  .ai-multi-tile-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-multi-tile-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-multi-tile-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.placeholder_bg_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-multi-tile-background-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-none {
    background: transparent;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-light {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.4) 100%);
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-medium {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.6) 100%);
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}.overlay-dark {
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
  }

  .ai-multi-tile-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    padding: {{ block.settings.content_padding }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-multi-tile-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 8px;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-multi-tile-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-2x2,
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-3x1,
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-grid-4x1,
    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry {
      grid-template-columns: 1fr;
    }

    .ai-multi-tile-grid-{{ ai_gen_id }}.layout-masonry .ai-multi-tile-item-{{ ai_gen_id }}:nth-child(1) {
      grid-row: span 1;
    }

    .ai-multi-tile-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-multi-tile-description-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.description_size }}px * 0.9);
    }
  }
{% endstyle %}

