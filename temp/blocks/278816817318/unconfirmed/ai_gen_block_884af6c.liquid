  assign section_width = block.settings.section_width
  assign num_tiles = block.settings.num_tiles
  assign masonry = block.settings.masonry
  assign num_columns = block.settings.num_columns
  assign num_rows = block.settings.num_rows
  assign margin_top = block.settings.margin_top
  assign margin_bottom = block.settings.margin_bottom
%}

