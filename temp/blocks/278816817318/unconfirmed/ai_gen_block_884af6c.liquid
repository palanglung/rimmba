  }

  .ai-multi-tile-container-{{ ai_gen_id }} {
    width: 100%;
    margin: 0 auto;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}--narrow {
    max-width: 800px;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}--fluid {
    max-width: 1320px;
    padding: 0 20px;
  }

  .ai-multi-tile-container-{{ ai_gen_id }}--full {
    max-width: 100%;
  }

  .ai-multi-tile-grid-{{ ai_gen_id }} {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat({{ num_columns }}, 1fr);
    grid-template-rows: repeat({{ num_rows }}, minmax(250px, auto));
  }

  {% if masonry %}
    .ai-multi-tile-item-{{ ai_gen_id }}:first-child {
      grid-column: 1;
      grid-row: 1 / span {{ num_rows }};
    }
  {% endif %}

  .ai-multi-tile-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    display: flex;
    flex-direction: column;
    min-height: 250px;
  }

  .ai-multi-tile-link-{{ ai_gen_id }} {
