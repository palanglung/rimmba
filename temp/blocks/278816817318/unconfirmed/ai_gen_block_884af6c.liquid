<div class="ai-multi-tile-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-tile-wrapper-{{ ai_gen_id }} {% if margin_top != 'none' %}ai-multi-tile-wrapper-{{ ai_gen_id }}--margin-top-{{ margin_top }}{% endif %} {% if margin_bottom != 'none' %}ai-multi-tile-wrapper-{{ ai_gen_id }}--margin-bottom-{{ margin_bottom }}{% endif %} color-{{ block.settings.color_scheme }}">
    <div class="ai-multi-tile-container-{{ ai_gen_id }} ai-multi-tile-container-{{ ai_gen_id }}--{{ section_width }}">
      <div class="ai-multi-tile-grid-{{ ai_gen_id }}">
        {% for i in (1..num_tiles) %}
          {% liquid
            assign tile_page_key = 'tile_' | append: i | append: '_page'
            assign tile_url_key = 'tile_' | append: i | append: '_url'
            assign tile_title_key = 'tile_' | append: i | append: '_title'
            assign tile_description_key = 'tile_' | append: i | append: '_description'
            assign tile_image_key = 'tile_' | append: i | append: '_image'
            assign tile_color_scheme_key = 'tile_' | append: i | append: '_color_scheme'
            assign tile_title_size_key = 'tile_' | append: i | append: '_title_size'
            assign tile_description_size_key = 'tile_' | append: i | append: '_description_size'
            assign tile_padding_key = 'tile_' | append: i | append: '_padding'
            assign tile_overlay_key = 'tile_' | append: i | append: '_overlay'
            assign tile_button_text_key = 'tile_' | append: i | append: '_button_text'
            assign tile_button_style_key = 'tile_' | append: i | append: '_button_style'
            assign tile_button_align_key = 'tile_' | append: i | append: '_button_align'

            assign tile_page = block.settings[tile_page_key]
            assign tile_url = block.settings[tile_url_key]
            assign tile_title = block.settings[tile_title_key]
            assign tile_description = block.settings[tile_description_key]
            assign tile_image = block.settings[tile_image_key]
            assign tile_color_scheme = block.settings[tile_color_scheme_key]
            assign tile_title_size = block.settings[tile_title_size_key]
            assign tile_description_size = block.settings[tile_description_size_key]
            assign tile_padding = block.settings[tile_padding_key]
            assign tile_overlay = block.settings[tile_overlay_key]
            assign tile_button_text = block.settings[tile_button_text_key]
            assign tile_button_style = block.settings[tile_button_style_key]
            assign tile_button_align = block.settings[tile_button_align_key]

            if tile_url == blank and tile_page != blank
              assign final_url = tile_page.url
            elsif tile_url != blank
              assign final_url = tile_url
            else
              assign final_url = '#'
            endif

            if tile_title == blank and tile_page != blank
              assign final_title = tile_page.title
            else
              assign final_title = tile_title
            endif

            if tile_description == blank and tile_page != blank
              assign final_description = tile_page.metafields.global.description_tag
            else
              assign final_description = tile_description
            endif

            if tile_image == blank and tile_page != blank and tile_page.image != blank
              assign final_image = tile_page.image
            elsif tile_image != blank
              assign final_image = tile_image
            else
              assign final_image = blank
            endif
          %}

          <div class="ai-multi-tile-item-{{ ai_gen_id }} color-{{ tile_color_scheme }}">
            <a href="{{ final_url }}" class="ai-multi-tile-link-{{ ai_gen_id }}" aria-label="{{ final_title | escape }}"></a>

            <div class="ai-multi-tile-bg-{{ ai_gen_id }}">
              {% if final_image != blank %}
                <img
                  src="{{ final_image | image_url: width: 1200 }}"
                  alt="{{ final_image.alt | default: final_title | escape }}"
                  loading="lazy"
                  width="{{ final_image.width }}"
                  height="{{ final_image.height }}"
                >
              {% else %}
                <div class="ai-multi-tile-bg-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if tile_overlay != 'none' %}
              <div class="ai-multi-tile-overlay-{{ ai_gen_id }} ai-multi-tile-overlay-{{ ai_gen_id }}--{{ tile_overlay }}"></div>
            {% endif %}

            <div class="ai-multi-tile-content-{{ ai_gen_id }} ai-multi-tile-padding-{{ ai_gen_id }}--{{ tile_padding }}">
              {% if final_title != blank %}
                <h3 class="ai-multi-tile-title-{{ ai_gen_id }} ai-multi-tile-title-{{ ai_gen_id }}--{{ tile_title_size }}">
                  {{ final_title }}
                </h3>
              {% endif %}

              {% if final_description != blank %}
                <div class="ai-multi-tile-description-{{ ai_gen_id }} ai-multi-tile-description-{{ ai_gen_id }}--{{ tile_description_size }}">
                  {{ final_description }}
                </div>
              {% endif %}

              {% if tile_button_text != blank %}
                <div class="ai-multi-tile-button-wrapper-{{ ai_gen_id }} ai-multi-tile-button-wrapper-{{ ai_gen_id }}--{{ tile_button_align }}">
                  <span class="ai-multi-tile-button-{{ ai_gen_id }} ai-multi-tile-button-{{ ai_gen_id }}--{{ tile_button_style }}">
                    {{ tile_button_text }}
                  </span>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

