    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    text-decoration: none;
  }

  .ai-multi-tile-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .ai-multi-tile-bg-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-multi-tile-bg-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-multi-tile-bg-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
    pointer-events: none;
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}--light {
    background-color: rgba(0, 0, 0, 0.2);
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}--medium {
    background-color: rgba(0, 0, 0, 0.4);
  }

  .ai-multi-tile-overlay-{{ ai_gen_id }}--dark {
    background-color: rgba(0, 0, 0, 0.6);
  }

  .ai-multi-tile-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    padding: 30px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    flex-grow: 1;
    pointer-events: none;
  }

  .ai-multi-tile-title-{{ ai_gen_id }} {
    margin: 0 0 10px;
    font-weight: 700;
    line-height: 1.2;
  }

