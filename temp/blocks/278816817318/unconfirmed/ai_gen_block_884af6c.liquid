  }

  .ai-multi-tile-button-wrapper-{{ ai_gen_id }} {
    pointer-events: auto;
  }

  .ai-multi-tile-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    text-decoration: none;
    border: 2px solid;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-multi-tile-button-{{ ai_gen_id }}--filled {
    background-color: #162a50;
    color: #ffc829;
    border-color: #162a50;
  }

  .ai-multi-tile-button-{{ ai_gen_id }}--filled:hover {
    background-color: #0f1d35;
    border-color: #0f1d35;
  }

  .ai-multi-tile-button-{{ ai_gen_id }}--outline {
    background-color: transparent;
    color: inherit;
    border-color: currentColor;
  }

  .ai-multi-tile-button-{{ ai_gen_id }}--outline:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  .ai-multi-tile-button-{{ ai_gen_id }}--text {
