            <a href="#{{ block.settings.link_2_anchor }}" class="ai-nav-link-{{ ai_gen_id }}">{{ block.settings.link_2_text }}</a>
          </dt>
          <dd></dd>
        {% endif %}

        {% if block.settings.link_3_text != blank and block.settings.link_3_anchor != blank %}
          <dt>
            <a href="#{{ block.settings.link_3_anchor }}" class="ai-nav-link-{{ ai_gen_id }}">{{ block.settings.link_3_text }}</a>
          </dt>
          <dd></dd>
        {% endif %}

        {% if block.settings.link_4_text != blank and block.settings.link_4_anchor != blank %}
          <dt>
            <a href="#{{ block.settings.link_4_anchor }}" class="ai-nav-link-{{ ai_gen_id }}">{{ block.settings.link_4_text }}</a>
          </dt>
          <dd></dd>
        {% endif %}

        {% if block.settings.link_5_text != blank and block.settings.link_5_anchor != blank %}
          <dt>
            <a href="#{{ block.settings.link_5_anchor }}" class="ai-nav-link-{{ ai_gen_id }}">{{ block.settings.link_5_text }}</a>
          </dt>
          <dd></dd>
        {% endif %}

        {% if block.settings.link_6_text != blank and block.settings.link_6_anchor != blank %}
          <dt>
            <a href="#{{ block.settings.link_6_anchor }}" class="ai-nav-link-{{ ai_gen_id }}">{{ block.settings.link_6_text }}</a>
          </dt>
          <dd></dd>
        {% endif %}

        {% if block.settings.link_7_text != blank and block.settings.link_7_anchor != blank %}
