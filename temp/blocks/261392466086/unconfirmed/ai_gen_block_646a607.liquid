{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-banner-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-banner__container-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-banner__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    text-align: {{ block.settings.title_alignment }};
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-product-banner__carousel-{{ ai_gen_id }} {
    position: relative;
    margin: 0 0 {{ block.settings.spacing_between_elements }}px;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;}

  .ai-product-banner__carousel-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;height: {{ block.settings.image_height_desktop }}px;
  }

  .ai-product-banner__carousel-slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
  }

  .ai-product-banner__carousel-slide-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
  }

  .ai-product-banner__carousel-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-product-banner__carousel-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-product-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-product-banner__carousel-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: background-color 0.3s ease;
  }

  .ai-product-banner__carousel-nav-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-product-banner__carousel-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .ai-product-banner__carousel-nav--prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-product-banner__carousel-nav--next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-product-banner__carousel-dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 20px;
  }

  .ai-product-banner__carousel-dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: none;
    background-color: rgba(0, 0, 0, 0.3);
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-product-banner__carousel-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.accent_color }};
  }

  .ai-product-banner__description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    text-align: {{ block.settings.description_alignment }};
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-banner__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-product-banner__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-product-banner__carousel-track-{{ ai_gen_id }} {
      height: {{ block.settings.image_height_mobile }}px;
    }

    .ai-product-banner__description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }

    .ai-product-banner__carousel-nav-{{ ai_gen_id }} {
      width: 35px;
      height: 35px;
    }

    .ai-product-banner__carousel-nav--prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-product-banner__carousel-nav--next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}<product-banner-{{ ai_gen_id }}
  class="ai-product-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-product-banner__container-{{ ai_gen_id }}">
    {% if block.settings.product_title != blank %}
      <h1 class="ai-product-banner__title-{{ ai_gen_id }}">
        {{ block.settings.product_title }}
      </h1>
    {% endif %}<div class="ai-product-banner__carousel-{{ ai_gen_id }}">
      <div class="ai-product-banner__carousel-track-{{ ai_gen_id }}" data-track>
        {% assign has_images = false %}
        {% for i in (1..5) %}
          {% assign image_key = 'image_' | append: i %}
          {% assign image = block.settings[image_key] %}
          {% if image != blank %}
            {% assign has_images = true %}
            <div class="ai-product-banner__carousel-slide-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 2000 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            </div>
          {% endif %}
        {% endfor %}

        {% unless has_images %}
          <div class="ai-product-banner__carousel-slide-{{ ai_gen_id }}">
            <div class="ai-product-banner__carousel-placeholder-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
              <div class="ai-product-banner__empty-state-{{ ai_gen_id }}">
                Add product images to create your carousel
              </div>
            </div>
          </div>
        {% endunless %}
      </div>

      {% if has_images %}
        <button
          class="ai-product-banner__carousel-nav-{{ ai_gen_id }} ai-product-banner__carousel-nav--prev-{{ ai_gen_id }}"
          data-prevaria-label="Previous image"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        </button>

        <button
          class="ai-product-banner__carousel-nav-{{ ai_gen_id }} ai-product-banner__carousel-nav--next-{{ ai_gen_id }}"
          data-next
          aria-label="Next image"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </button>

        <div class="ai-product-banner__carousel-dots-{{ ai_gen_id }}" data-dots></div>
      {% endif %}
    </div>

    {% if block.settings.product_description != blank %}
      <div class="ai-product-banner__description-{{ ai_gen_id }}">
        {{ block.settings.product_description }}
      </div>
    {% endif %}
  </div>
</product-banner-{{ ai_gen_id }}><script>
  (function() {
    class ProductBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('[data-track]');
        this.slides = this.querySelectorAll('.ai-product-banner__carousel-slide-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('[data-prev]');
        this.nextBtn = this.querySelector('[data-next]');
        this.dotsContainer = this.querySelector('[data-dots]');

        this.totalSlides = this.slides.length;

        if (this.totalSlides > 1) {
          this.createDots();
          this.setupEventListeners();
          this.updateCarousel();
        }
      }

      createDots() {
        if (!this.dotsContainer) return;

        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-product-banner__carousel-dot-{{ ai_gen_id }}';
          dot.setAttribute('data-slide', i);
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          if (i === 0) dot.classList.add('active');
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.nextSlide());
        }

        if (this.dotsContainer) {
          this.dotsContainer.addEventListener('click', (e) => {
            if (e.target.hasAttribute('data-slide')) {
              this.goToSlide(parseInt(e.target.getAttribute('data-slide')));
            }
          });
        }
      }

      prevSlide() {
        this.currentSlide = this.currentSlide === 0 ? this.totalSlides - 1 : this.currentSlide - 1;
        this.updateCarousel();
      }

      nextSlide() {
        this.currentSlide = this.currentSlide === this.totalSlides - 1 ? 0 : this.currentSlide + 1;
        this.updateCarousel();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
      }

      updateCarousel() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        const dots = this.querySelectorAll('.ai-product-banner__carousel-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });

        if (this.prevBtn) {
          this.prevBtn.disabled = this.currentSlide === 0;
        }

        if (this.nextBtn) {
          this.nextBtn.disabled = this.currentSlide === this.totalSlides - 1;
        }
      }
    }

    customElements.define('product-banner-{{ ai_gen_id }}', ProductBanner{{ ai_gen_id }});
  })();
</script>

