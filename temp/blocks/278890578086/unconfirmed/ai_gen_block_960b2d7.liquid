      "label": "Spacing bottom",
      "options": [
        { "value": "No", "label": "No" },
        { "value": "S", "label": "S" },
        { "value": "M", "label": "M" },
        { "value": "L", "label": "L" },
        { "value": "XL", "label": "XL" }
