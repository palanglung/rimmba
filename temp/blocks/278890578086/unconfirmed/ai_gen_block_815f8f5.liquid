                  class="ai-contact-form__button-{{ ai_gen_id }} button button--{{ block.settings.button_style }} {{ block.settings.button_text_transform }} color-{{ block.settings.container_color_scheme }}"
                >
                  {{ block.settings.button_label }}
                </button>
              </div>
            </div>
          {% else %}
            <div class="ai-contact-form__fields-column-{{ ai_gen_id }}">
              {% if block.settings.show_name %}
                <div class="ai-contact-form__field-{{ ai_gen_id }}">
                  <label for="contact-name-{{ ai_gen_id }}" class="visually-hidden">
                    {{ block.settings.name_label }}
                  </label>
