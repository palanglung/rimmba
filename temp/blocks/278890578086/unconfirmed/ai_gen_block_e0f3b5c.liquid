        <div class="contact-form grid layout-normal">
          {% if block.settings.show_name %}
            <div class="{% if block.settings.fields_columns == '1' %}col-span-6{% elsif block.settings.fields_columns == '2' %}col-span-3{% else %}col-span-2{% endif %}">
