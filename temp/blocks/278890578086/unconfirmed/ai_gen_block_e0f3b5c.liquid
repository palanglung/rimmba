{% doc %}
  @prompt
    A Contact Form section container with choice for:
    
    Title (manually fill, hidden if empty) option [h2 | h3 | h4 | h5]-default"h2";
    Description (manually fill, hidden if empty);
    Title & Description alignment [Start | Center | End]-default"Center";
    
    Layout Type [Normal | Split]-default"Normal";
    Fields Columns [1 | 2 | 3]-default"1";
    
    Container width [narrow | fluid | full]-default"Narrow";
    Container Color Scheme [select];
    Spacing top [No | S | M | L | XL]-default"M";
    Spacing bottom [No | S | M | L | XL]-default"M";
    Padding [No | S | M | L | XL]-default"M";
    Internal spacing between fields [No | S | M | L | XL]-default"M";
    
    Button:
    Button label-default"Send message";
    Button style [filled | outlined | text]-default"filled";
    Button alignment [left | center | right | full]-default"left";
    
    The form must use:
    class="contact-form grid";
    
    Layout behavior:
    
    When Layout Type = Normal:
    Use grid with col-span classes.
    Fields follow Fields Columns setting.
    1 = each field wrapper uses col-span-6;
    2 = each field wrapper uses col-span-3;
    3 = distribute evenly using grid logic.
    Message spans full width using col-span-6.
    Button wrapped inside:
    class="form-row form-row--actions col-span-6";
    
    When Layout Type = Split:
    Grid must create two equal columns.
    Left column (col-span-3) contains all enabled fields except Message.
    Right column (col-span-3) contains Message and Button.
    Fields Columns ignored.
    Both columns equal height.
    Message textarea stretches automatically using layout (no fixed height).
    Button must render under Message inside same column.
    Button wrapper must use:
    class="form-row form-row--actions";
    
    On mobile:
    All fields use full width (col-span-6).
    Message last.
    Button under Message.
    
    Fields Color Scheme [select] (applies only to inputs and textarea);
    
    IMPORTANT:
    Apply color scheme class only to input, textarea and select elements.
    Do NOT apply to grid, col-span wrappers, form element or field wrapper.
    
    Each field must use structure:
    
    <div class="field">
    <label class="field__label">...</label>
    <input or textarea class="field__input">
    <span class="field__message hidden"></span>
    </div>
    
    If field is textarea, wrapper must use:
    class="field field--textarea";
    
    If Hide label visually = Yes:
    label must use:
    class="field__label visually-hidden";
    
    Each field includes:
    Show [Yes | No]-default"Yes";
    Required [Yes | No]-default"No";
    Custom label;
    Custom placeholder;
    Hide label visually [Yes | No]-default"No";
    
    Fields:
    Name;
    Surname;
    Email (email input with native validation);
    Phone;
    Subject;
    Message (textarea);
    
    Required attribute applied only if enabled.
    Use Shopify native {% form 'contact' %};
    Preserve hidden inputs for form_type and utf8.
    
    Button must use Release native classes, example:
    class="button button--filled uppercase color-scheme-X";
    Do NOT create custom button CSS.
    Button must follow same spacing rhythm as fields.
    Validation messages must use class="field__message".
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign spacing_map_top = 'No:0,S:1,M:2,L:3,XL:4' | split: ','
  assign spacing_map_bottom = 'No:0,S:1,M:2,L:3,XL:4' | split: ','
  assign spacing_map_padding = 'No:0,S:1,M:2,L:3,XL:4' | split: ','
  assign spacing_map_internal = 'No:0,S:1,M:2,L:3,XL:4' | split: ','

  for item in spacing_map_top
    assign parts = item | split: ':'
    if parts[0] == block.settings.spacing_top
      assign spacing_top_value = parts[1]
      break
    endif
  endfor

  for item in spacing_map_bottom
    assign parts = item | split: ':'
    if parts[0] == block.settings.spacing_bottom
      assign spacing_bottom_value = parts[1]
      break
    endif
  endfor

  for item in spacing_map_padding
    assign parts = item | split: ':'
    if parts[0] == block.settings.padding
      assign padding_value = parts[1]
      break
    endif
  endfor

  for item in spacing_map_internal
    assign parts = item | split: ':'
    if parts[0] == block.settings.internal_spacing
      assign internal_spacing_value = parts[1]
      break
    endif
  endfor
%}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    display: block;
    margin-top: calc(var(--section-spacing-unit-size) * {{ spacing_top_value }});
    margin-bottom: calc(var(--section-spacing-unit-size) * {{ spacing_bottom_value }});
  }

  .ai-contact-form-container-{{ ai_gen_id }} {
    padding: calc(var(--section-spacing-unit-size) * {{ padding_value }});
  }

  .ai-contact-form-container-{{ ai_gen_id }}.container-width-narrow {
    max-width: 76.8rem;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-contact-form-container-{{ ai_gen_id }}.container-width-fluid {
    max-width: var(--page-width);
    margin-left: auto;
    margin-right: auto;
  }

  .ai-contact-form-container-{{ ai_gen_id }}.container-width-full {
    max-width: 100%;
  }

  .ai-contact-form-header-{{ ai_gen_id }} {
    margin-bottom: calc(var(--section-spacing-unit-size) * {{ internal_spacing_value }});
  }

  .ai-contact-form-header-{{ ai_gen_id }}.align-start {
    text-align: left;
  }

  .ai-contact-form-header-{{ ai_gen_id }}.align-center {
    text-align: center;
  }

  .ai-contact-form-header-{{ ai_gen_id }}.align-end {
    text-align: right;
  }

  .ai-contact-form-title-{{ ai_gen_id }} {
    margin: 0 0 1.6rem 0;
  }

  .ai-contact-form-description-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-contact-form-{{ ai_gen_id }} .contact-form {
    row-gap: calc(var(--section-spacing-unit-size) * {{ internal_spacing_value }});
  }

  .ai-contact-form-{{ ai_gen_id }} .form-row--actions {
    margin-top: 0;
  }

  .ai-contact-form-{{ ai_gen_id }} .form-row--actions.button-align-left {
    justify-content: flex-start;
  }

  .ai-contact-form-{{ ai_gen_id }} .form-row--actions.button-align-center {
    justify-content: center;
  }

  .ai-contact-form-{{ ai_gen_id }} .form-row--actions.button-align-right {
    justify-content: flex-end;
  }

  .ai-contact-form-{{ ai_gen_id }} .form-row--actions.button-align-full .button {
    width: 100%;
  }

  .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: calc(var(--section-spacing-unit-size) * {{ internal_spacing_value }});
  }

  .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split .form-column-left {
    grid-column: span 3;
    display: flex;
    flex-direction: column;
    gap: calc(var(--section-spacing-unit-size) * {{ internal_spacing_value }});
  }

  .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split .form-column-right {
    grid-column: span 3;
    display: flex;
    flex-direction: column;
    gap: calc(var(--section-spacing-unit-size) * {{ internal_spacing_value }});
  }

  .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split .field--textarea {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split .field--textarea textarea {
    flex-grow: 1;
    min-height: 15rem;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split {
      grid-template-columns: repeat(6, 1fr);
    }

    .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split .form-column-left,
    .ai-contact-form-{{ ai_gen_id }} .contact-form.layout-split .form-column-right {
      grid-column: span 6;
    }
  }
{% endstyle %}

<div class="ai-contact-form-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-form-container-{{ ai_gen_id }} container-width-{{ block.settings.container_width }} color-{{ block.settings.container_color_scheme }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-contact-form-header-{{ ai_gen_id }} align-{{ block.settings.title_description_alignment }}">
        {% if block.settings.title != blank %}
          {% case block.settings.title_tag %}
            {% when 'h2' %}
              <h2 class="ai-contact-form-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
            {% when 'h3' %}
              <h3 class="ai-contact-form-title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
            {% when 'h4' %}
              <h4 class="ai-contact-form-title-{{ ai_gen_id }}">{{ block.settings.title }}</h4>
            {% when 'h5' %}
              <h5 class="ai-contact-form-title-{{ ai_gen_id }}">{{ block.settings.title }}</h5>
          {% endcase %}
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-contact-form-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% form 'contact' %}
