{% doc %}
  @prompt
    A contact form with settings for 4 different layout options.
    settings for Color Schema.
    settings for width [narrow | fluid | full | auto]
    it must be possible to add/remove fields and choose which fields are compulsory or not.
    it must have option to choose which email will the contact form be sent to once the user press send.
    all must be fully customizable.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-contact-form__container-{{ ai_gen_id }} {
    margin: 0 auto;
    {% if block.settings.width == 'narrow' %}
      max-width: 600px;
    {% elsif block.settings.width == 'fluid' %}
      max-width: 900px;
    {% elsif block.settings.width == 'full' %}
      max-width: 100%;
    {% elsif block.settings.width == 'auto' %}
      max-width: {{ block.settings.desktop_width_percent }}%;
    {% endif %}
  }

  .ai-contact-form__wrapper-{{ ai_gen_id }} {
    background: {{ block.settings.color_scheme.settings.background }};
    {% if block.settings.color_scheme.settings.background_gradient != blank %}
      background: {{ block.settings.color_scheme.settings.background_gradient }};
    {% endif %}
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-contact-form__heading-{{ ai_gen_id }} {
    color: {{ block.settings.color_scheme.settings.header_text }};
    margin: 0 0 {{ block.settings.spacing_between_fields }}px;
    font-size: {{ block.settings.heading_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__description-{{ ai_gen_id }} {
    color: {{ block.settings.color_scheme.settings.secondary_text }};
    margin: 0 0 {{ block.settings.spacing_between_fields | times: 1.5 }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-contact-form__fields-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.spacing_between_fields }}px;
    {% if block.settings.layout == 'single' %}
      grid-template-columns: 1fr;
    {% elsif block.settings.layout == 'two-column' %}
      grid-template-columns: repeat(2, 1fr);
    {% elsif block.settings.layout == 'three-column' %}
      grid-template-columns: repeat(3, 1fr);
    {% elsif block.settings.layout == 'mixed' %}
      grid-template-columns: repeat(2, 1fr);
    {% endif %}
  }

  .ai-contact-form__field-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-contact-form__field--full-{{ ai_gen_id }} {
    grid-column: 1 / -1;
  }

  .ai-contact-form__label-{{ ai_gen_id }} {
    color: {{ block.settings.color_scheme.settings.primary_text }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 500;
  }

  .ai-contact-form__required-{{ ai_gen_id }} {
    color: {{ block.settings.required_indicator_color }};
    margin-left: 4px;
  }

  .ai-contact-form__input-{{ ai_gen_id }},
  .ai-contact-form__textarea-{{ ai_gen_id }},
  .ai-contact-form__select-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.color_scheme.settings.border }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background: {{ block.settings.input_background_color }};
    color: {{ block.settings.color_scheme.settings.primary_text }};
    font-size: {{ block.settings.input_text_size }}px;
    width: 100%;
  }

  .ai-contact-form__input-{{ ai_gen_id }}:focus,
  .ai-contact-form__textarea-{{ ai_gen_id }}:focus,
  .ai-contact-form__select-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.color_scheme.settings.primary_button }};
    outline-offset: 2px;
  }

  .ai-contact-form__textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-form__button-{{ ai_gen_id }} {
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 2 }}px;
    background: {{ block.settings.color_scheme.settings.primary_button }};
    color: {{ block.settings.color_scheme.settings.primary_button_label }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    cursor: pointer;
    transition: opacity 0.3s ease;
    width: 100%;
    text-transform: {{ block.settings.button_text_transform }};
    letter-spacing: {{ block.settings.button_letter_spacing }};
  }

  .ai-contact-form__button-{{ ai_gen_id }}:hover {
    opacity: 0.85;
  }

  .ai-contact-form__success-{{ ai_gen_id }} {
    color: {{ block.settings.success_message_color }};
    padding: {{ block.settings.spacing_between_fields }}px;
    background: {{ block.settings.success_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: center;
    margin-bottom: {{ block.settings.spacing_between_fields }}px;
  }

  .ai-contact-form__error-{{ ai_gen_id }} {
    color: {{ block.settings.error_message_color }};
    font-size: 14px;
    margin-top: 4px;
  }

  .ai-contact-form__general-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_message_color }};
    padding: {{ block.settings.spacing_between_fields }}px;
    background: {{ block.settings.error_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    margin-bottom: {{ block.settings.spacing_between_fields }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form__fields-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-contact-form__wrapper-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<contact-form-{{ ai_gen_id }}
  class="ai-contact-form-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-contact-form__container-{{ ai_gen_id }}">
    <div class="ai-contact-form__wrapper-{{ ai_gen_id }}">
      {%- form 'contact' -%}
        <input
          type="hidden"
          name="contact[recipient_email]"
          value="{{ block.settings.recipient_email }}"
        >

        {%- if form.posted_successfully? -%}
          <div
            class="ai-contact-form__success-{{ ai_gen_id }}"
            id="ai-contact-form-success-{{ ai_gen_id }}"
          >
            {{ block.settings.success_message }}
          </div>
        {%- endif -%}

        {%- if form.errors -%}
          <div class="ai-contact-form__general-error-{{ ai_gen_id }}">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        {%- if block.settings.heading != blank -%}
          <h2 class="ai-contact-form__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {%- endif -%}

        {%- if block.settings.description != blank -%}
          <div class="ai-contact-form__description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {%- endif -%}

        <div class="ai-contact-form__fields-{{ ai_gen_id }}">
          {%- if block.settings.show_name_field -%}
            <div class="ai-contact-form__field-{{ ai_gen_id }} {% if block.settings.layout == 'single' or block.settings.layout == 'mixed' %}ai-contact-form__field--full-{{ ai_gen_id }}{% endif %}">
              <label
                for="ai-contact-name-{{ ai_gen_id }}"
                class="ai-contact-form__label-{{ ai_gen_id }}"
              >
                {{ block.settings.name_label }}
                {%- if block.settings.name_required -%}
                  <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
                {%- endif -%}
              </label>
              <input
                type="text"
                id="ai-contact-name-{{ ai_gen_id }}"
                name="contact[{{ block.settings.name_label }}]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.name_placeholder }}"
                {% if block.settings.name_required %}required{% endif %}
                {% if form.errors %}
                  aria-invalid="true"
                {% endif %}
              >
            </div>
          {%- endif -%}

          {%- if block.settings.show_email_field -%}
            <div class="ai-contact-form__field-{{ ai_gen_id }} {% if block.settings.layout == 'single' %}ai-contact-form__field--full-{{ ai_gen_id }}{% endif %}">
              <label
                for="ai-contact-email-{{ ai_gen_id }}"
                class="ai-contact-form__label-{{ ai_gen_id }}"
              >
                {{ block.settings.email_label }}
                {%- if block.settings.email_required -%}
                  <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
                {%- endif -%}
              </label>
              <input
                type="email"
                id="ai-contact-email-{{ ai_gen_id }}"
                name="contact[email]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.email_placeholder }}"
                autocomplete="email"
                {% if block.settings.email_required %}required{% endif %}
                {% if form.errors %}
                  aria-invalid="true"
                {% endif %}
              >
              {%- if form.errors contains 'email' -%}
                <span class="ai-contact-form__error-{{ ai_gen_id }}">
                  {{ form.errors.messages.email }}
                </span>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- if block.settings.show_phone_field -%}
            <div class="ai-contact-form__field-{{ ai_gen_id }} {% if block.settings.layout == 'single' %}ai-contact-form__field--full-{{ ai_gen_id }}{% endif %}">
              <label
                for="ai-contact-phone-{{ ai_gen_id }}"
                class="ai-contact-form__label-{{ ai_gen_id }}"
              >
                {{ block.settings.phone_label }}
                {%- if block.settings.phone_required -%}
                  <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
                {%- endif -%}
              </label>
              <input
                type="tel"
                id="ai-contact-phone-{{ ai_gen_id }}"
                name="contact[{{ block.settings.phone_label }}]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.phone_placeholder }}"
                autocomplete="tel"
                {% if block.settings.phone_required %}required{% endif %}
              >
            </div>
          {%- endif -%}

          {%- if block.settings.show_subject_field -%}
            <div class="ai-contact-form__field-{{ ai_gen_id }} ai-contact-form__field--full-{{ ai_gen_id }}">
              <label
                for="ai-contact-subject-{{ ai_gen_id }}"
                class="ai-contact-form__label-{{ ai_gen_id }}"
              >
                {{ block.settings.subject_label }}
                {%- if block.settings.subject_required -%}
                  <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
                {%- endif -%}
              </label>
              <input
                type="text"
                id="ai-contact-subject-{{ ai_gen_id }}"
                name="contact[{{ block.settings.subject_label }}]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.subject_placeholder }}"
                {% if block.settings.subject_required %}required{% endif %}
              >
            </div>
          {%- endif -%}

          {%- if block.settings.show_company_field -%}
            <div class="ai-contact-form__field-{{ ai_gen_id }} {% if block.settings.layout == 'single' or block.settings.layout == 'two-column' %}ai-contact-form__field--full-{{ ai_gen_id }}{% endif %}">
              <label
                for="ai-contact-company-{{ ai_gen_id }}"
                class="ai-contact-form__label-{{ ai_gen_id }}"
              >
                {{ block.settings.company_label }}
                {%- if block.settings.company_required -%}
                  <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
                {%- endif -%}
              </label>
              <input
                type="text"
                id="ai-contact-company-{{ ai_gen_id }}"
                name="contact[{{ block.settings.company_label }}]"
                class="ai-contact-form__input-{{ ai_gen_id }}"
                placeholder="{{ block.settings.company_placeholder }}"
                {% if block.settings.company_required %}required{% endif %}
              >
            </div>
          {%- endif -%}

          {%- if block.settings.show_message_field -%}
            <div class="ai-contact-form__field-{{ ai_gen_id }} ai-contact-form__field--full-{{ ai_gen_id }}">
              <label
                for="ai-contact-message-{{ ai_gen_id }}"
                class="ai-contact-form__label-{{ ai_gen_id }}"
              >
                {{ block.settings.message_label }}
                {%- if block.settings.message_required -%}
                  <span class="ai-contact-form__required-{{ ai_gen_id }}">*</span>
                {%- endif -%}
              </label>
              <textarea
                id="ai-contact-message-{{ ai_gen_id }}"
                name="contact[body]"
                class="ai-contact-form__textarea-{{ ai_gen_id }}"
                placeholder="{{ block.settings.message_placeholder }}"
                {% if block.settings.message_required %}required{% endif %}
              ></textarea>
            </div>
          {%- endif -%}

          <div class="ai-contact-form__field-{{ ai_gen_id }} ai-contact-form__field--full-{{ ai_gen_id }}">
            <button
              type="submit"
              class="ai-contact-form__button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </button>
          </div>
        </div>
      {%- endform -%}
    </div>
  </div>
</contact-form-{{ ai_gen_id }}>

<script>
  (function() {
    class ContactForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const form = this.querySelector('form');
        const successMessage = this.querySelector('#ai-contact-form-success-{{ ai_gen_id }}');

        if (successMessage) {
          successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      }
    }

    customElements.define('contact-form-{{ ai_gen_id }}', ContactForm{{ ai_gen_id }});
  })();
</script>

