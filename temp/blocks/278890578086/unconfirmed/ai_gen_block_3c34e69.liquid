                  <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-phone-{{ ai_gen_id }}">
                    {{ block.settings.phone_label }}{% if block.settings.phone_required %} *{% endif %}
                  </label>
                  <input
                    type="tel"
                    id="contact-phone-{{ ai_gen_id }}"
                    name="contact[{{ block.settings.phone_label }}]"
                    placeholder="{{ block.settings.phone_placeholder }}"
                    autocomplete="tel"
                    class="color-scheme-{{ block.settings.fields_color_scheme }}"
                    {% if block.settings.phone_required %}required{% endif %}
                  >
                </div>
