                  <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-subject-{{ ai_gen_id }}">
                    {{ block.settings.subject_label }}{% if block.settings.subject_required %} *{% endif %}
                  </label>
                  <input
                    type="text"
                    id="contact-subject-{{ ai_gen_id }}"
                    name="contact[{{ block.settings.subject_label }}]"
                    placeholder="{{ block.settings.subject_placeholder }}"
                    class="color-scheme-{{ block.settings.fields_color_scheme }}"
                    {% if block.settings.subject_required %}required{% endif %}
                  >
                </div>
              {% endif %}

              {% if block.settings.show_message %}
                <div class="ai-contact-form__field-{{ ai_gen_id }} ai-contact-form__message-wrapper-{{ ai_gen_id }}">
                  <label class="ai-contact-form__label-{{ ai_gen_id }}" for="contact-message-{{ ai_gen_id }}">
                    {{ block.settings.message_label }}{% if block.settings.message_required %} *{% endif %}
                  </label>
                  <textarea
                    id="contact-message-{{ ai_gen_id }}"
                    name="contact[body]"
                    rows="6"
                    placeholder="{{ block.settings.message_placeholder }}"
                    class="color-scheme-{{ block.settings.fields_color_scheme }}"
                    {% if block.settings.message_required %}required{% endif %}
                  ></textarea>
                </div>
              {% endif %}
            </div>

            <div class="ai-contact-form__button-wrapper-{{ ai_gen_id }}">
              <button
                type="submit"
                class="button button--{{ block.settings.button_style }} {{ block.settings.button_text_transform }} color-scheme-{{ block.settings.container_color_scheme }}"
              >
                {{ block.settings.button_label }}
              </button>
            </div>
          {% endif %}
        </div>
      {% endform %}
    </div>
  </div>
</div>

