                  <label for="contact-subject-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }} {% if block.settings.hide_label_visually %}visually-hidden{% endif %}">
                    {{ block.settings.subject_label }}
                  </label>
                  <input
                    type="text"
                    id="contact-subject-{{ ai_gen_id }}"
                    name="contact[subject]"
                    class="ai-contact-form-input-{{ ai_gen_id }} field__input color-{{ block.settings.fields_color_scheme }}"
                    placeholder="{{ block.settings.subject_placeholder }}"
                    {% if block.settings.subject_required %}required{% endif %}
