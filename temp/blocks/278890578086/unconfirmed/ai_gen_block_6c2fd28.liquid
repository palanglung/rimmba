                  <label for="contact-phone-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }} {% if block.settings.hide_label_visually %}visually-hidden{% endif %}">
                    {{ block.settings.phone_label }}
                  </label>
                  <input
                    type="tel"
                    id="contact-phone-{{ ai_gen_id }}"
                    name="contact[phone]"
                    class="ai-contact-form-input-{{ ai_gen_id }} field__input color-{{ block.settings.fields_color_scheme }}"
                    placeholder="{{ block.settings.phone_placeholder }}"
                    autocomplete="tel"
                    {% if block.settings.phone_required %}required{% endif %}
                  >
                </div>
