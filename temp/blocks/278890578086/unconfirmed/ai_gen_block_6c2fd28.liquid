              <button type="submit" class="button button--{{ block.settings.button_style }} color-{{ block.settings.container_color_scheme }}">
                {{ block.settings.button_label }}
              </button>
            </div>
          </div>
        {% else %}
          {% if block.settings.show_name %}
            <div class="ai-contact-form-field-{{ ai_gen_id }}">
              <label for="contact-name-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }} {% if block.settings.hide_label_visually %}visually-hidden{% endif %}">
                {{ block.settings.name_label }}
              </label>
              <input
                type="text"
                id="contact-name-{{ ai_gen_id }}"
