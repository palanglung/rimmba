            </div>
          {% endif %}

          {% if block.settings.show_surname %}
            <div class="ai-contact-form-field-{{ ai_gen_id }}">
              <label for="contact-surname-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }} {% if block.settings.hide_label_visually %}visually-hidden{% endif %}">
                {{ block.settings.surname_label }}
              </label>
              <input
                type="text"
                id="contact-surname-{{ ai_gen_id }}"
                name="contact[surname]"
                class="ai-contact-form-input-{{ ai_gen_id }} field__input color-{{ block.settings.fields_color_scheme }}"
                placeholder="{{ block.settings.surname_placeholder }}"
                {% if block.settings.surname_required %}required{% endif %}
              >
            </div>
          {% endif %}

          {% if block.settings.show_email %}
            <div class="ai-contact-form-field-{{ ai_gen_id }}">
              <label for="contact-email-{{ ai_gen_id }}" class="ai-contact-form-label-{{ ai_gen_id }} {% if block.settings.hide_label_visually %}visually-hidden{% endif %}">
                {{ block.settings.email_label }}
              </label>
              <input
                type="email"
                id="contact-email-{{ ai_gen_id }}"
                name="contact[email]"
                class="ai-contact-form-input-{{ ai_gen_id }} field__input color-{{ block.settings.fields_color_scheme }}"
                placeholder="{{ block.settings.email_placeholder }}"
                autocomplete="email"
