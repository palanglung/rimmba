{% doc %}
  @prompt
    A Contact Form section container with choice for:
    Recipient e-mail (by default the one from the theme's settings)
    Title (manually fill, hidden if empty) option [h2 | h3 | h4 | h5]-default"h2";
    Description (manually fill, hidden if empty);
    Title & Description alignment [Start | Center | End]-default"Center";
    
    Layout Type [Normal | Split]-default"Normal";
    Fields Columns [1 | 2 | 3]-default"1";
    
    Container width [narrow | fluid | full]-default"Narrow";
    Container Color Scheme [select]; (this applies to the container and labels, not to the input fields and placeholder texts)
    Spacing top [No | S | M | L | XL]-default"M";
    Spacing bottom [No | S | M | L | XL]-default"M";
    Padding [No | S | M | L | XL]-default"M";
    Internal spacing between fields [No | S | M | L | XL]-default"M";
    
    Container Color Scheme rules:
    Apply selected scheme class (example: color-scheme-X) to the main section wrapper only.
    Do NOT apply Container Color Scheme to inputs or textarea.
    Container Color Scheme controls background and text of the section only.
    
    Fields Color Scheme [select]; (this applies to class="field__input" and textarea, including their background which is otherwise transparent!)
    
    If Hide label visually = Yes:
    label must use class="field__label visually-hidden".
    
    Button:
    Button label-default"Send message";
    Button style [filled | outlined | text]-default"filled";
    Button alignment [left | center | right | full]-default"left";
    
    Button rules:
    Button must use theme native classes:
    class="button button--filled color-scheme-X";
    Button must inherit Container Color Scheme, not Fields Color Scheme.
    Do NOT apply Fields Color Scheme to button.
    Do NOT create custom button CSS.
    
    Layout behavior:
    
    When Layout Type = Normal:
    Fields follow Fields Columns setting.
    Message spans full width.
    When Layout Type = Split:
    Grid divided into two equal columns.
    Left column = all fields except Message.
    Right column = Message + Button.
    Both columns equal height.
    Message textarea stretches using layout (no fixed height).
    Button under Message.
    Fields Columns ignored.
    
    On mobile:
    Single column layout.
    Message last.
    Button under Message.
    
    Each field includes:
    Show [Yes | No]-default"Yes";
    Required [Yes | No]-default"No";
    Custom label;
    Custom placeholder; (by default same as label)
    
    Fields:
    Name;
    Surname;
    Email (email input with native validation);
    Phone;
    Subject;
    Message (textarea);
    
    Use Shopify native {% form 'contact' %};
    Required attribute applied only when enabled;
    Validation message uses class="field__message hidden";
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign spacing_map_top = 'no:0,s:1.6,m:3.2,l:4.8,xl:6.4' | split: ','
  assign spacing_map_bottom = 'no:0,s:1.6,m:3.2,l:4.8,xl:6.4' | split: ','
  assign spacing_map_padding = 'no:0,s:1.6,m:3.2,l:4.8,xl:6.4' | split: ','
  assign spacing_map_internal = 'no:0,s:1.6,m:3.2,l:4.8,xl:6.4' | split: ','

  assign spacing_top = 3.2
  for item in spacing_map_top
    assign parts = item | split: ':'
    if parts[0] == block.settings.spacing_top
      assign spacing_top = parts[1]
      break
    endif
  endfor

  assign spacing_bottom = 3.2
  for item in spacing_map_bottom
    assign parts = item | split: ':'
    if parts[0] == block.settings.spacing_bottom
      assign spacing_bottom = parts[1]
      break
    endif
  endfor

  assign padding = 3.2
  for item in spacing_map_padding
    assign parts = item | split: ':'
    if parts[0] == block.settings.padding
      assign padding = parts[1]
      break
    endif
  endfor

  assign internal_spacing = 3.2
  for item in spacing_map_internal
    assign parts = item | split: ':'
    if parts[0] == block.settings.internal_spacing
      assign internal_spacing = parts[1]
      break
    endif
  endfor
%}

{% style %}
  .ai-contact-form-{{ ai_gen_id }} {
    display: block;
    padding-top: {{ spacing_top }}rem;
    padding-bottom: {{ spacing_bottom }}rem;
  }

  .ai-contact-form-container-{{ ai_gen_id }} {
    padding: {{ padding }}rem;
    width: 100%;
    margin: 0 auto;
  }

  .ai-contact-form-container-{{ ai_gen_id }}.width-narrow {
    max-width: 720px;
  }

  .ai-contact-form-container-{{ ai_gen_id }}.width-fluid {
    max-width: 1200px;
  }

  .ai-contact-form-container-{{ ai_gen_id }}.width-full {
    max-width: 100%;
  }

  .ai-contact-form-header-{{ ai_gen_id }} {
    margin-bottom: {{ internal_spacing }}rem;
  }

  .ai-contact-form-header-{{ ai_gen_id }}.align-start {
    text-align: left;
  }

  .ai-contact-form-header-{{ ai_gen_id }}.align-center {
    text-align: center;
  }

  .ai-contact-form-header-{{ ai_gen_id }}.align-end {
    text-align: right;
  }

  .ai-contact-form-title-{{ ai_gen_id }} {
    margin: 0 0 1.6rem 0;
  }

  .ai-contact-form-description-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-contact-form-fields-{{ ai_gen_id }} {
    display: grid;
    gap: {{ internal_spacing }}rem;
  }

  .ai-contact-form-fields-{{ ai_gen_id }}.layout-normal.columns-1 {
    grid-template-columns: 1fr;
  }

  .ai-contact-form-fields-{{ ai_gen_id }}.layout-normal.columns-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .ai-contact-form-fields-{{ ai_gen_id }}.layout-normal.columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .ai-contact-form-fields-{{ ai_gen_id }}.layout-split {
    grid-template-columns: 1fr 1fr;
  }

  .ai-contact-form-field-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-contact-form-field-{{ ai_gen_id }}.full-width {
    grid-column: 1 / -1;
  }

  .ai-contact-form-field-{{ ai_gen_id }}.split-left {
    grid-column: 1;
    grid-row: 1 / span 10;
  }

  .ai-contact-form-field-{{ ai_gen_id }}.split-right {
    grid-column: 2;
    grid-row: 1 / span 10;
    display: flex;
    flex-direction: column;
    gap: {{ internal_spacing }}rem;
  }

  .ai-contact-form-field-{{ ai_gen_id }}.split-right-inner {
    display: flex;
    flex-direction: column;
    gap: {{ internal_spacing }}rem;
    flex: 1;
  }

  .ai-contact-form-label-{{ ai_gen_id }} {
    display: block;
    margin-bottom: 0.8rem;
    font-size: 1.4rem;
  }

  .ai-contact-form-label-{{ ai_gen_id }}.visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .ai-contact-form-input-{{ ai_gen_id }},
  .ai-contact-form-textarea-{{ ai_gen_id }} {
    width: 100%;
    padding: 1.2rem 1.6rem;
    border: 1px solid currentColor;
    font-size: 1.4rem;
    font-family: inherit;
  }

  .ai-contact-form-textarea-{{ ai_gen_id }} {
    min-height: 120px;
    resize: vertical;
  }

  .ai-contact-form-textarea-{{ ai_gen_id }}.split-layout {
    flex: 1;
    min-height: 100%;
    resize: none;
  }

  .ai-contact-form-message-{{ ai_gen_id }} {
    margin-top: 0.8rem;
    font-size: 1.2rem;
    display: none;
  }

  .ai-contact-form-message-{{ ai_gen_id }}.visible {
    display: block;
  }

  .ai-contact-form-button-wrapper-{{ ai_gen_id }} {
    margin-top: {{ internal_spacing }}rem;
  }

  .ai-contact-form-button-wrapper-{{ ai_gen_id }}.align-left {
    text-align: left;
  }

  .ai-contact-form-button-wrapper-{{ ai_gen_id }}.align-center {
    text-align: center;
  }

  .ai-contact-form-button-wrapper-{{ ai_gen_id }}.align-right {
    text-align: right;
  }

  .ai-contact-form-button-wrapper-{{ ai_gen_id }}.align-full .button {
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .ai-contact-form-fields-{{ ai_gen_id }}.layout-normal.columns-2,
    .ai-contact-form-fields-{{ ai_gen_id }}.layout-normal.columns-3,
    .ai-contact-form-fields-{{ ai_gen_id }}.layout-split {
      grid-template-columns: 1fr;
    }

    .ai-contact-form-field-{{ ai_gen_id }}.split-left,
    .ai-contact-form-field-{{ ai_gen_id }}.split-right {
      grid-column: 1;
      grid-row: auto;
    }

    .ai-contact-form-textarea-{{ ai_gen_id }}.split-layout {
      min-height: 120px;
      resize: vertical;
    }
  }
{% endstyle %}

