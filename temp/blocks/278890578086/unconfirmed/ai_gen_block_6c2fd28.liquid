                    class="ai-contact-form-input-{{ ai_gen_id }} field__input color-{{ block.settings.fields_color_scheme }}"
                    placeholder="{{ block.settings.email_placeholder }}"
                    autocomplete="email"
                    {% if block.settings.email_required %}required{% endif %}
                  >
                </div>
