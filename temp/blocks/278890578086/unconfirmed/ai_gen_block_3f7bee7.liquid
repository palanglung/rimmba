        {% endif %}
      {% endform %}
    </div>
  </div>
</contact-form-{{ ai_gen_id }}>

<script>
  (function() {
    class ContactForm{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        const form = this.querySelector('form');
        if (form && (form.querySelector('.form-status') || form.querySelector('.form__message'))) {
          const statusElement = form.querySelector('.form-status, .form__message');
          if (statusElement) {
            statusElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        }
      }
    }

    customElements.define('contact-form-{{ ai_gen_id }}', ContactForm{{ ai_gen_id }});
  })();
</script>

