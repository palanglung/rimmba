{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign spacing_map_no = 0
  assign spacing_map_s = 8
  assign spacing_map_m = 16
  assign spacing_map_l = 24
  assign spacing_map_xl = 32

  case block.settings.spacing_top
    when 'no'
      assign spacing_top = spacing_map_no
    when 's'
      assign spacing_top = spacing_map_s
    when 'm'
      assign spacing_top = spacing_map_m
    when 'l'
      assign spacing_top = spacing_map_l
    when 'xl'
      assign spacing_top = spacing_map_xl
  endcase

  case block.settings.spacing_bottom
    when 'no'
      assign spacing_bottom = spacing_map_no
    when 's'
      assign spacing_bottom = spacing_map_s
    when 'm'
      assign spacing_bottom = spacing_map_m
    when 'l'
      assign spacing_bottom = spacing_map_l
    when 'xl'
      assign spacing_bottom = spacing_map_xl
  endcase

  case block.settings.tiles_spacing
    when 'no'
      assign tiles_gap = spacing_map_no
    when 's'
      assign tiles_gap = spacing_map_s
    when 'm'
      assign tiles_gap = spacing_map_m
    when 'l'
      assign tiles_gap = spacing_map_l
    when 'xl'
      assign tiles_gap = spacing_map_xl
  endcase
%}

{% style %}
  .ai-multi-tile-container-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding-top: {{ spacing_top }}px;
    padding-bottom: {{ spacing_bottom }}px;
  }

  .ai-multi-tile-wrapper-{{ ai_gen_id }} {
    margin: 0 auto;
    {% if block.settings.container_width == 'narrow' %}
      max-width: 1200px;
      padding: 0 20px;
    {% elsif block.settings.container_width == 'fluid' %}
      max-width: 100%;
      padding: 0 40px;
    {% else %}
      max-width: 100%;
      padding: 0;
    {% endif %}
  }

  .ai-multi-tile-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ tiles_gap }}px;
    {% if block.settings.masonry_enabled %}
      grid-template-columns: repeat({{ block.settings.columns }}, 1fr);
      grid-template-rows: repeat({{ block.settings.rows }}, 1fr);
    {% else %}
      grid-template-columns: repeat({{ block.settings.columns }}, 1fr);
      grid-auto-rows: 1fr;
    {% endif %}
  }

  {% if block.settings.masonry_enabled and block.settings.columns > 1 %}
    .ai-multi-tile-grid-{{ ai_gen_id }} .ai-tile-item-{{ ai_gen_id }}:first-child {
      grid-row: 1 / span {{ block.settings.rows }};
    }
  {% endif %}

  .ai-tile-item-{{ ai_gen_id }} {
    position: relative;
    min-height: 300px;
    overflow: hidden;
    border-radius: 0;
  }

  .ai-tile-link-{{ ai_gen_id }} {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }

  .ai-tile-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-tile-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-tile-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-tile-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-tile-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
  }

  .ai-tile-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
  }

  .ai-tile-content-inner-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-tile-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: 24px;
    font-weight: 700;
    line-height: 1.2;
  }

  .ai-tile-description-{{ ai_gen_id }} {
    margin: 0;
    font-size: 16px;
    line-height: 1.5;
  }

  .ai-tile-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    width: fit-content;
  }

  .ai-tile-button-radius-none-{{ ai_gen_id }} {
    border-radius: 0;
  }

  .ai-tile-button-radius-smooth-{{ ai_gen_id }} {
    border-radius: 4px;
  }

  .ai-tile-button-radius-rounded-{{ ai_gen_id }} {
    border-radius: 50px;
  }

  @media screen and (max-width: 768px) {
    .ai-multi-tile-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }

    {% if block.settings.masonry_enabled %}
      .ai-multi-tile-grid-{{ ai_gen_id }} .ai-tile-item-{{ ai_gen_id }}:first-child {
        grid-row: auto;
      }
    {% endif %}

    .ai-tile-item-{{ ai_gen_id }} {
      min-height: 250px;
    }
  }
{% endstyle %}

<multi-tile-container-{{ ai_gen_id }} class="ai-multi-tile-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-multi-tile-wrapper-{{ ai_gen_id }}">
    <div class="ai-multi-tile-grid-{{ ai_gen_id }}">
      {% for i in (1..block.settings.tiles_count) %}
        {% liquid
          assign tile_key_prefix = 'tile_' | append: i
          assign color_scheme_key = tile_key_prefix | append: '_color_scheme'
          assign page_key = tile_key_prefix | append: '_page'
          assign url_key = tile_key_prefix | append: '_url'
          assign new_tab_key = tile_key_prefix | append: '_new_tab'
          assign tile_as_link_key = tile_key_prefix | append: '_tile_as_link'
          assign title_key = tile_key_prefix | append: '_title'
          assign description_key = tile_key_prefix | append: '_description'
          assign button_label_key = tile_key_prefix | append: '_button_label'
          assign button_style_key = tile_key_prefix | append: '_button_style'
          assign button_radius_key = tile_key_prefix | append: '_button_radius'
          assign overlay_key = tile_key_prefix | append: '_overlay'
          assign image_key = tile_key_prefix | append: '_image'
          assign content_position_key = tile_key_prefix | append: '_content_position'
          assign content_alignment_key = tile_key_prefix | append: '_content_alignment'
          assign padding_key = tile_key_prefix | append: '_padding'

          assign tile_color_scheme = block.settings[color_scheme_key]
          assign tile_page = block.settings[page_key]
          assign tile_url = block.settings[url_key]
          assign tile_new_tab = block.settings[new_tab_key]
          assign tile_as_link = block.settings[tile_as_link_key]
          assign tile_title = block.settings[title_key]
          assign tile_description = block.settings[description_key]
          assign tile_button_label = block.settings[button_label_key]
          assign tile_button_style = block.settings[button_style_key]
          assign tile_button_radius = block.settings[button_radius_key]
          assign tile_overlay = block.settings[overlay_key]
          assign tile_image = block.settings[image_key]
          assign tile_content_position = block.settings[content_position_key]
          assign tile_content_alignment = block.settings[content_alignment_key]
          assign tile_padding = block.settings[padding_key]

          if tile_url != blank
            assign final_url = tile_url
          elsif tile_page
            assign final_url = tile_page.url
          else
            assign final_url = '#'
          endif

          if tile_title == blank and tile_page
            assign final_title = tile_page.title
          else
            assign final_title = tile_title
          endif

          if tile_description == blank and tile_page
            assign final_description = tile_page.content | strip_html | truncate: 150
          else
            assign final_description = tile_description
          endif

          if tile_image == blank and tile_page and tile_page.image
            assign final_image = tile_page.image
          else
            assign final_image = tile_image
          endif

          case tile_overlay
            when 'no'
              assign overlay_opacity = 0
            when 'soft'
              assign overlay_opacity = 0.25
            when 'medium'
              assign overlay_opacity = 0.5
            when 'strong'
              assign overlay_opacity = 0.85
          endcase

          case tile_padding
            when 'no'
              assign padding_value = spacing_map_no
            when 's'
              assign padding_value = spacing_map_s
            when 'm'
              assign padding_value = spacing_map_m
            when 'l'
              assign padding_value = spacing_map_l
            when 'xl'
              assign padding_value = spacing_map_xl
          endcase

          case tile_content_position
            when 'top'
              assign justify_content = 'flex-start'
            when 'center'
              assign justify_content = 'center'
            when 'bottom'
              assign justify_content = 'flex-end'
          endcase

          case tile_content_alignment
            when 'start'
              assign align_items = 'flex-start'
              assign text_align = 'left'
            when 'center'
              assign align_items = 'center'
              assign text_align = 'center'
            when 'end'
              assign align_items = 'flex-end'
              assign text_align = 'right'
          endcase
        %}

        <div class="ai-tile-item-{{ ai_gen_id }} color-{{ tile_color_scheme }}">
          {% if tile_as_link %}
            <a 
              href="{{ final_url }}" 
              class="ai-tile-link-{{ ai_gen_id }}"
              {% if tile_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
            >
          {% else %}
            <div class="ai-tile-link-{{ ai_gen_id }}">
          {% endif %}

            <div class="ai-tile-background-{{ ai_gen_id }}">
              {% if final_image %}
                <img 
                  src="{{ final_image | image_url: width: 1200 }}" 
                  alt="{{ final_image.alt | escape }}"
                  loading="lazy"
                  width="{{ final_image.width }}"
                  height="{{ final_image.height }}"
                >
              {% else %}
                <div class="ai-tile-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div 
              class="ai-tile-overlay-{{ ai_gen_id }}"
              style="background-color: rgb(var(--color-background)); opacity: {{ overlay_opacity }};"
            ></div>

            <div 
              class="ai-tile-content-{{ ai_gen_id }}"
              style="padding: {{ padding_value }}px; justify-content: {{ justify_content }}; align-items: {{ align_items }};"
            >
              <div class="ai-tile-content-inner-{{ ai_gen_id }}" style="text-align: {{ text_align }};">
                {% if final_title != blank %}
                  <h3 class="ai-tile-title-{{ ai_gen_id }}" style="color: rgb(var(--color-foreground));">
                    {{ final_title }}
                  </h3>
                {% endif %}

                {% if final_description != blank %}
                  <p class="ai-tile-description-{{ ai_gen_id }}" style="color: rgb(var(--color-foreground));">
                    {{ final_description }}
                  </p>
                {% endif %}

                {% if tile_button_label != blank %}
                  {% liquid
                    if tile_button_style == 'filled'
                      assign btn_bg = 'rgb(var(--color-button))'
                      assign btn_color = 'rgb(var(--color-button-text))'
                      assign btn_border = '2px solid rgb(var(--color-button))'
                    elsif tile_button_style == 'outlined'
                      assign btn_bg = 'transparent'
                      assign btn_color = 'rgb(var(--color-foreground))'
                      assign btn_border = '2px solid rgb(var(--color-foreground))'
                    else
                      assign btn_bg = 'transparent'
                      assign btn_color = 'rgb(var(--color-foreground))'
                      assign btn_border = 'none'
                    endif
                  %}

                  {% if tile_as_link == false %}
                    <a 
                      href="{{ final_url }}"
                      {% if tile_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
                      class="ai-tile-button-{{ ai_gen_id }} ai-tile-button-radius-{{ tile_button_radius }}-{{ ai_gen_id }}"
                      style="background: {{ btn_bg }}; color: {{ btn_color }}; border: {{ btn_border }};"
                    >
                      {{ tile_button_label }}
                    </a>
                  {% else %}
                    <span 
                      class="ai-tile-button-{{ ai_gen_id }} ai-tile-button-radius-{{ tile_button_radius }}-{{ ai_gen_id }}"
                      style="background: {{ btn_bg }}; color: {{ btn_color }}; border: {{ btn_border }};"
                    >
                      {{ tile_button_label }}
                    </span>
                  {% endif %}
                {% endif %}
              </div>
            </div>

          {% if tile_as_link %}
            </a>
          {% else %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</multi-tile-container-{{ ai_gen_id }}>

