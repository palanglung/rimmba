/* Manual Edit, Dmitrii Suvorov, Add Custom Fonts */

@font-face {
    font-family: 'Mackenzin';
    src: url('https://cdn.shopify.com/s/files/1/0060/8560/7524/files/Mackenzin.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}
@font-face {
  font-family: 'Nord-Book';
  src: url('https://cdn.shopify.com/s/files/1/0060/8560/7524/files/Nord-Book.otf') format('opentype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
@font-face {
  font-family: 'DMSans-Regular';
  src: url('https://cdn.shopify.com/s/files/1/0060/8560/7524/files/DMSans-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}


.Mackenzin {
  font-family: "Mackenzin", serif;
}
.DMSans-Regular {
  font-family: "DMSans-Regular", sans-serif;
}
.Nord-Book {
  font-family: "Nord-Book", sans-serif;
}



